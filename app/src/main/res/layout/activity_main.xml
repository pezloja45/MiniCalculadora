            app:layout_row="4" />

        <Button
            android:id="@+id/btn_punto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/btn_numeros"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_."
            android:textSize="20sp"
            app:cornerRadius="27.5dp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_masMenos"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/btn_signos"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_masMenos"
            android:textSize="14sp"
            app:cornerRadius="0dp"
            app:layout_column="2"
            app:layout_gravity="center_vertical"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_igual"
            android:layout_width="195dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/btn_numeros"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_igual"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/btn_ac"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_ac"
            app:cornerRadius="0dp"
            app:layout_columnSpan="2" />

</androidx.gridlayout.widget.GridLayout>